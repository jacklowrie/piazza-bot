{
    "display_information": {
        "name": "PiazzaBot",
        "description": "expands piazza ids to urls",
        "background_color": "#3e7aab"
    },
    "features": {
        "bot_user": {
            "display_name": "PiazzaBot",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write.public",
                "chat:write",
                "channels:history",
                "groups:history",
                "im:history",
                "mpim:history"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "message.channels",
                "message.groups",
                "message.im",
                "message.mpim"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}